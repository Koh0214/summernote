%p#notice= notice
%h1 Books
%table
  -# %thead
  -#   %tr
  -#     %th Title
  -#     %th Content
  -#     %th{:colspan => "3"}
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        -# %td= book.content
        .content{style: "border: solid 2px gray; padding: 10px; margin: 10px;"}
          = book.content.html_safe
          %hr
          = link_to 'Show', book
          = link_to 'Edit', edit_book_path(book)
          = link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Book', new_book_path, class: "btn btn-primary text-white"
